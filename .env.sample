# Copy to .env and fill in values. Keep this file out of version control.

# --- External APIs ---
# OpenWeatherMap API key
OPENWEATHERMAP_API_KEY=
# Default coordinates (strings). Example: 40.0448 / -75.4884
LATITUDE=
LONGITUDE=

# --- Hubitat ---
# Local Hubitat hub information (if used)
HUBITAT_IP=
HUBITAT_ACCESS_TOKEN=
HUBITAT_APP_ID=

# --- Redis ---
# Local Redis connection (defaults are good for many home setups)
REDIS_HOST=localhost
REDIS_PORT=6379

# --- Logging ---
# DEBUG, INFO, WARNING, ERROR
PYTHON_LOG_LEVEL=INFO

# --- Misc ---
# Set to "dev" or "prod" if you want to toggle modes in code
APP_ENV=dev
